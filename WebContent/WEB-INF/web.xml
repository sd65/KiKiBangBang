<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:web="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>InscriptionServlet</servlet-name>
		<servlet-class>controllers.InscriptionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>InscriptionServlet</servlet-name>
		<url-pattern>/inscription</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>controllers.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SubmitIdeaServlet</servlet-name>
		<servlet-class>controllers.SubmitIdeaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SubmitIdeaServlet</servlet-name>
		<url-pattern>/user/submitIdea</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>MyIdeasServlet</servlet-name>
		<servlet-class>controllers.MyIdeasServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyIdeasServlet</servlet-name>
		<url-pattern>/user/myIdeas</url-pattern>
	</servlet-mapping>
</web-app>